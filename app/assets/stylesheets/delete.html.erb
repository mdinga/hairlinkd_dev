<div class = 'container'>

  <div class = 'm-3'>
      <% if current_user.has_role? :def_client %>
        <%= button_to("<< Profile", client_path(@client), method: :get, class: 'btn btn-sm') %>
      <% elsif current_user.has_role? :def_admin %>
        <%= button_to("<< Clients", clients_path, method: :get, class: 'btn btn-sm') %>
      <% end %>
  </div>

  <div class = 'text-center'>
    <h2>Delete Profile?</h2>

      <%= form_for(@client, :method => 'delete') do |f| %>

      <p>Are you sure you want to permanently delete your profile? This action cannot be undone.</p>

    <div>
      <%= f.submit("Delete Client", class: 'btn btn-danger btn-sm') %>
    </div>

  <% end %>
</div>

</div>
