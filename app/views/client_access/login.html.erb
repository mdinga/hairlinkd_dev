<div class = 'container'>

  <div class = "text-center">
    <h3>Log in as a Client</h3>
  </div>

      <%= form_tag(client_access_attempt_login_path, :method => :post, class: 'form-group text-center') do %>
          <fieldset>
            <div class = 'form-group'>
              <%= label_tag(:username) %>
              <%= text_field_tag(:username, params[:username]) %>
            </div>

            <div class = 'form-group'>
              <%= label_tag(:password) %>
              <%= password_field_tag(:password) %>
            </div>

            <div class = 'form-group text-center'>
              <%= submit_tag("Log In", class: 'btn btn-sm')%>
            </div>

            <div class = "form-group">
              <%= link_to("Forgot Password", client_access_forgot_path) %><br />
              <%= link_to("<--Return", root_path) %>
            </div>
          </fieldset>
      <% end %>
</div>
