<div class = "container">
  <%= button_to("<< Home Page", root_path, method: :get, class: "btn btn-sm m-3")%>

<div>
    <%= form_for @contact do |c| %>

    <%= error_messages_for(c.object) %>

    <legend class = 'text-center'> Lets Keep In Touch: </legend>
    <form>
      <fieldset>
        <div class ='form-group'>
          <label class = 'form-control-label'>Name:</label>
          <%= c.text_field :name, class: 'form-control' %>
        </div>

        <div class ='form-group'>
          <label class = 'form-control-label'>Email:</label>
          <%= c.text_field :email, class: 'form-control' %>
        </div>

        <div class ='form-group'>
          <label class = 'form-control-label'>Phone: (Optional)</label>
          <%= c.text_field :phone, class: 'form-control' %>
        </div>

        <div class ='form-group fihla'>
          <label class = 'form-control-label'>Your Username:</label>
          <%= c.text_field :nickname, class: 'form-control' %>
        </div>
      </fieldset>

      <div class ='form-group'>
        <label class = 'form-control-label'>Your Message:</label>
        <%= c.text_area :message, :size => '5x5', class: 'form-control' %>
      </div>
    </fieldset>

        <div class = "text-center mb-5">
        <%= c.submit("Send Message", class: 'btn btn-sm') %>
        </div>
      <% end %>
    </form>

  </div >

</div >
