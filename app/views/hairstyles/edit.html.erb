<div class="container">
  <%= link_to("<< Back to Hairstyles", hairstyles_path) %>

  <div>
    <h2>Update Hairstyle Name</h2>

    <%= form_for(@hairstyle) do |h| %>

      <%= render(:partial => 'hairstyle_form', :locals => {:h => h}) %>

      <br />
      <div>
        <%= h.submit "Update Hairstyle Name", class: "btn" %>
      </div>

    <% end %>
  </div>
</div>
