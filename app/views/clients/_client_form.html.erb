  <fieldset>
    <div class ='form-group'>
      <label class = 'form-control-label'>Username:</label>
      <%= c.text_field :username, class: 'form-control' %>
    </div>

    <div class ='form-group'>
      <label class = 'form-control-label'>Name:</label>
      <%= c.text_field :name, class: 'form-control' %>
    </div>

    <div class ='form-group'>
      <label class = 'form-control-label'>Surname:</label>
      <%= c.text_field :surname, class: 'form-control' %>
    </div>

<% if current_user.has_role? :def_admin%>
    <div class ='form-group'>
      <label class = 'form-control-label'>User_ID:</label>
      <%= c.text_field :user_id, class: 'form-control' %>
    </div>
<% end %>

  </fieldset>
