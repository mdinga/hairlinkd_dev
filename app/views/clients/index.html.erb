<div class = "container">
<h2>Clients</h2>
  <%= link_to("Add a Client", new_client_path)%>
<h3>List of Clients on Hairlinkd</h3><hr>

<div class = 'card-group'>

    <% @client.each do |client| %>
   <div id = "stylist_list">
    <div class = 'card-body'>
      <div class = 'card text-center' style = 'width:auto;'>
      <%= render(:partial => 'index_clients', :html => {:multiport => true}, :locals => {:client => client})%>

        <div class = 'card-footer'>
          <%= link_to("View Profile", client_path(client))%><br />
          <%= link_to("Edit Profile", edit_client_path(client))%><br />
          <%= link_to("Delete Profile", delete_client_path(client))%><br />
        </div> <!--card-footer-->

      </div> <!--card-->
    </div><!--card -->
                 </div> <!--stylist_list-->
    <% end %>
</div><!--card body-->

</div>
