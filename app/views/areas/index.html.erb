<h2>Area Names</h2>
<%= link_to("Add Areas", new_area_path)%>
<hr>

<div class = "container">
  <table class = 'table table-hover'>

    <tr>
      <th>Area</th>
      <th>City</th>
      <th>Action </th>
    </tr>

    <% @areas.each do |a| %>
    <tr>
      <td><%= a.name %></td>
      <td><%= City.find(a.city_id).city %></td>
      <td>
          <%= link_to("Edit", edit_area_path(a))%>
          <%= link_to("Delete", delete_area_path(a))%>
      </td>
    </tr>
    <% end %>
  </table>

</div><!--container-->
