<div class = 'container'>

  <div class = "text-center">
    <h3>Reset Your Password</h3>
  </div>

      <%= form_tag(stylist_access_reset_path, :method => :post, class: 'form-group text-center') do %>
          <fieldset>
            <div class = 'form-group'>
              <%= label_tag(:email) %>
              <%= text_field_tag(:email, params[:email]) %>
            </div>

            <div class = 'form-group text-center'>
              <%= submit_tag("Reset My Password", class: 'btn btn-sm')%>
            </div>

            <div class = "form-group">
              <%= link_to("<< Return to Log In", stylist_access_stylist_login_path) %>
            </div>
          </fieldset>
      <% end %>
</div>
