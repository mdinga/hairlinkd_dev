<div class="container">
  <%= link_to("<< Back to Hairstyles", hairstyles_path) %>

  <div>
    <h2>Add a Category</h2>

    <%= form_for(@category) do |c| %>

      <%= render(:partial => 'category_form', :locals => {:c => c}) %>

      <br />

      <div>
        <%= c.submit "Add Category", class: "btn" %>
      </div>

    <% end %>
  </div>
</div>
