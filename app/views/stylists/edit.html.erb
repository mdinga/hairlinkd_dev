<div class = "container">

  <div class = "m-3">

      <%= button_to("<- Profile", stylist_path(@stylist), method: :get, class: 'btn btn-sm m-1') %>

    <% if %>
      <%= button_to("<- Stylists", stylists_path, method: :get, class: 'btn btn-sm m-1') %>
    <% end %>
  </div>

  <h2 class = 'text-center'>Edit Your Profile</h2>

  <%= form_for(@stylist) do |s| %>

    <%= render(:partial => 'stylist_form', :html => {:multiport => true}, :locals => {:s => s}) %>

    <div class = "text-center mb-2"><%= s.submit 'Update My Profile', class: 'btn btn-hl btn-sm'  %></div>


  <% end %>
</div>
