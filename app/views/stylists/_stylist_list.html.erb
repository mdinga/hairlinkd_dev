
    <div class = 'card-group'>

        <% @stylist.each do |stylist| %>

       <div id = "stylist_list">
        <div class = 'card-body' style = 'width:auto;'>
          <div class = 'card text-center' style = 'width:200px;'>

            <%= render(:partial => 'index_stylists', :html => {:multiport => true}, :locals => {:stylist => stylist}) %>

           <div class = 'card-footer'>

              <%= link_to("View Profile", stylist_path(stylist))%><br>

            <% if current_user.has_role? :def_admin%>
              <%= link_to("Edit Profile", edit_stylist_path(stylist))%><br>
              <%= link_to("Delete Profile", delete_stylist_path(stylist))%>
            <% end %>

           </div> <!--card-footer-->

          </div> <!--card-->
          </div><!--card body-->
         </div> <!--stylist_list-->

           <% end %>

    </div><!--card-group-->
