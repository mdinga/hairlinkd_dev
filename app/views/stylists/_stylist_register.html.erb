<div class = "container register_form">
    <fieldset>
      <legend class = 'text-center'>Create Profile as a Stylist</legend>

          <div class ='form-group'>
            <label class = 'form-control-label'>Username:</label>
            <%= s.text_field :username, class: "form-control" %>
          </div>

          <div class ='form-group'>
            <label class = 'form-control-label'>Email:</label>
             <%= s.text_field :email, class: "form-control" %>
          </div>

          <div class ='form-group'>
            <label class = 'form-control-label'>Password:</label><span style = "font-size:0.7em;"> (Password must be at least 8 characters and have one number)</span>
            <%= s.password_field :password, class: "form-control" %>
          </div>

          <div class ='form-group'>
            <label class = 'form-control-label'>Confirm Password:</label>
            <%= s.password_field :password_confirmation, class: "form-control" %>
          </div>

          <div class ='fihla'>
            <label class = 'form-control-label' >Nickname:</label>
            <%= s.password_field :nickname, class: "form-control" %>
          </div>

          <div class ='fihla'>
            <label class = 'form-control-label' >User_ID:</label>
            <%= s.text_field :user_id, class: "form-control" %>
          </div>

