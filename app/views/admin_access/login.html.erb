<div class = 'container'>

 <%= form_tag(admin_access_attempt_login_path, :method => :post, class: 'form-group text-center') do %>
  <legend>Admin Login</legend>
    <fieldset>
      <div class = 'form-group'>
        <%= label_tag(:email) %>
        <%= text_field_tag(:email, params[:email]) %>
      </div>
      <div class = 'form-group'>
        <%= label_tag(:password) %>
        <%= password_field_tag(:password) %>
      </div>

      <div class = 'form-group text-center'>
        <%= submit_tag("Log In", class: 'btn btn-secondary')%>
      </div>
    </fieldset>
   <% end %>


</div>
