<%= f.hidden_field(:stylist_id) %>
<%= f.hidden_field(:client_id) %>
<%  %>

<div class = 'p-3' style = 'background-color:black; color:white; border-radius:5px; text-align:center;'>
    <h5> <%=  %>Review Form</h5>
</div>

<div class = "register_form p-3">
    <fieldset>
      <div class ='row form-group'>
        <label class = 'form-control-label col-md-4 text-center'>Date of Your Appointment:</label>
        <%= f.date_select :date_of_appointment , class: 'form-control col-md-8 text-center' %>
      </div>
<hr>

      <div class ='row form-group'>
        <label class = 'radio-inline col-md-4 text-center'>I got value for my money:</label>
        <div class = 'col-md-8'>
          <%= f.radio_button :rating_1, 1, type: 'radio', class: "m-3" %><span>1</span>
          <%= f.radio_button :rating_1, 2, type: 'radio', class: "m-3"%><span>2</span>
          <%= f.radio_button :rating_1, 3, type: 'radio', class: "m-3"%><span>3</span>
          <%= f.radio_button :rating_1, 4, type: 'radio', class: "m-3"%><span>4</span>
          <%= f.radio_button :rating_1, 5, type: 'radio', class: "m-3"%><span>5</span>
        </div>
      </div>
<hr>
      <div class ='row form-group'>
        <label class = 'radio-inline col-md-4 text-center'>The venue was clean and hygienic:</label>
        <div class = 'col-md-8'>
          <%= f.radio_button :rating_2, 1, type: 'radio', class: "m-3" %><span>1</span>
          <%= f.radio_button :rating_2, 2, type: 'radio', class: "m-3"%><span>2</span>
          <%= f.radio_button :rating_2, 3, type: 'radio', class: "m-3"%><span>3</span>
          <%= f.radio_button :rating_2, 4, type: 'radio', class: "m-3"%><span>4</span>
          <%= f.radio_button :rating_2, 5, type: 'radio', class: "m-3"%><span>5</span>
        </div>
      </div>
<hr>
      <div class ='row form-group'>
        <label class = 'radio-inline col-md-4 text-center'>My needs and expectation were met:</label>
        <div class = 'col-md-8'>
          <%= f.radio_button :rating_3, 1, type: 'radio', class: "m-3" %><span>1</span>
          <%= f.radio_button :rating_3, 2, type: 'radio', class: "m-3"%><span>2</span>
          <%= f.radio_button :rating_3, 3, type: 'radio', class: "m-3"%><span>3</span>
          <%= f.radio_button :rating_3, 4, type: 'radio', class: "m-3"%><span>4</span>
          <%= f.radio_button :rating_3, 5, type: 'radio', class: "m-3"%><span>5</span>
        </div>
      </div>
<hr>
      <div class ='row form-group'>
        <label class = 'radio-inline col-md-4 text-center'>Acted in a professional manner:</label>
        <div class = 'col-md-8'>
          <%= f.radio_button :rating_4, 1, type: 'radio', class: "m-3" %><span>1</span>
          <%= f.radio_button :rating_4, 2, type: 'radio', class: "m-3"%><span>2</span>
          <%= f.radio_button :rating_4, 3, type: 'radio', class: "m-3"%><span>3</span>
          <%= f.radio_button :rating_4, 4, type: 'radio', class: "m-3"%><span>4</span>
          <%= f.radio_button :rating_4, 5, type: 'radio', class: "m-3"%><span>5</span>
        </div>
      </div>
<hr>
      <div class ='row form-group'>
        <label class = 'radio-inline col-md-4 text-center'>Was gentle when handling my hair:</label>
        <div class = 'col-md-8'>
          <%= f.radio_button :rating_5, 1, type: 'radio', class: "m-3" %><span>1</span>
          <%= f.radio_button :rating_5, 2, type: 'radio', class: "m-3"%><span>2</span>
          <%= f.radio_button :rating_5, 3, type: 'radio', class: "m-3"%><span>3</span>
          <%= f.radio_button :rating_5, 4, type: 'radio', class: "m-3"%><span>4</span>
          <%= f.radio_button :rating_5, 5, type: 'radio', class: "m-3"%><span>5</span>
        </div>
      </div>
<hr>
      <div class ='row form-group'>
          <label class = 'checkbox-inline col-md-4 text-center'>Will you returning?</label>
        <div class = 'col-md-8'>
            <%= f.radio_button :return, 1, type: "checkbox", class: "m-3" %>Yes
            <%= f.radio_button :return, 0, type: "checkbox", class: "m-3" %>No
        </div>
      </div>
<hr>
      <div class ='row form-group'>
          <label class = 'checkbox-inline col-md-4 text-center'>Would you recommend the Stylist?</label>

          <div class = 'col-md-8'>
            <%= f.radio_button :recommend, 1, type: "checkbox", class: "m-3" %>Yes
            <%= f.radio_button :recommend, 0, type: "checkbox", class: "m-3" %>No
          </div>
      </div>
<hr>
      <div class ='form-group'>
        <label class = 'form-control-label'>Please tell us more about your experience:</label>
        <%= f.text_area :Comment, class: 'form-control' %>
      </div>
    </fieldset>
<hr>
    <div class = 'text-center'>
      <%= f.submit "Submit Rating", class: "btn btn-hl" %>
    </div>
