<section>
  <div class = "container-fluid row" style = "background-color:#F5F5F5; margin:30px 0px 0px 0px; padding-bottom: 20px;">
    <sub-section class = " col col-md-4 text-center offset-md-6" style = "font-size:1.4em;">


              <div class = "m-3">
                <img src="/assets/web-deco/Icon-1.png" />
              </div>

              <div>
                <h2 style = 'text-decoration:underline; margin-bottom:15px;'>Hairlinkd for Stylists</h2>
