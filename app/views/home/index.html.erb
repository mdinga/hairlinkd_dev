            <div>
              <p><strong>Check it Out Now</strong></p>
              <%= button_to "Register as a Client", new_client_path, class: "btn btn-lg", id: "stylist_register_div_two", style: "display: inline-block;",:method => :get %>
            </div><!--card-footer-->
      </sub-section>

    </div>  <!-- row -->
  </div>  <!-- container -->

</div>


